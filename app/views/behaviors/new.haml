= form_for(@behavior) do |f|
  %p
    = f.label :trigger
    = f.select :trigger, options_for_select(Behavior::POSSIBLE_TRIGGERS)

  %p
    = f.label :chance
    = f.number_field :chance, class: 'text_field', step: 0.01, min: 0, max: 1

  %p
    = f.label :npc
    - npc_options = options_from_collection_for_select(Npc.all, "id", "name")
    = f.select :npc_id, npc_options

  %p
    = f.submit
