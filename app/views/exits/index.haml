%h1 Exits

=link_to "New Exit", new_exit_path

%h3 All Exits

%table{border: 1}
  %tbody
    %tr
      %td Name
      %td Description
      %td Key
      %td Linked To
      %td Actions
    - @exits.each do |e|
      %tr
        %td= link_to e.room.name, room_path(e.room_id)
        %td= link_to e.description, exit_path(e.id)
        %td= e.key
        %td= link_to e.linked_room.name, room_path(e.linked_room_id)
        %td
          = link_to "Edit", edit_exit_path(e.id)
          = link_to "Delete", exit_path(e.id), method: :delete
